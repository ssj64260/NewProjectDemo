<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_toolbar_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/selector_bg_button_transparent"
        android:padding="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/color_181818"
        android:textSize="@dimen/textsize_17"
        tools:text="标题" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_toolbar_title">

        <TextView
            android:id="@+id/tv_toolbar_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/selector_bg_button_transparent"
            android:gravity="center"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone"
            tools:text="操作" />

        <ImageView
            android:id="@+id/iv_toolbar_action1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_button_transparent"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_toolbar_action2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_button_transparent"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
